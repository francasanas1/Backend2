<div>
  <h2>Ingrese Producto</h2>
  <form action="/productos" method="POST" class="form-inline">
    <div class="form-group mx-sm-3">
      <label for="inputUser" class="sr-only">Nombre</label>
      <input
        type="text"
        class="form-control"
        id="nombre"
        placeholder="User"
        name="title"
      />
    </div>
    <div class="form-group mx-sm-3">
      <label for="inputPass" class="sr-only">Precio</label>
      <input
        type="text"
        class="form-control"
        id="precio"
        placeholder="Pass"
        name="price"
      />
    </div>
    <div class="form-group mx-sm-3">
      <label for="inputPass" class="sr-only">Url</label>
      <input
        type="text"
        class="form-control"
        id="url"
        placeholder="Pass"
        name="url"
      />
    </div>
    <button type="submit" class="btn btn-primary">Confirm</button>
  </form>
</div>